{% extends "base.html" %}

{% block css %}
	<link type="text/css" rel="stylesheet" href="/static/web/css/hupuNBA/teamlogo.css" />
{% endblock %}

{% block content %}
	<div class="row-fluid">
		<div class="span12 widget-container-span">
									
			<div class="row-fluid">

				<div class="span12">
					<div class="header red">
						<h4>
							<img src="/static/web/img/hupuNBA/hupu.ico" style="width:16px;height:16px;"/>
							&nbsp;
							<a href="http://nba.hupu.com" target="_blank" class="red" style="border-style:solid;border-width: 1px;">虎扑篮球</a>
						</h4>
					</div>
				</div>



				<div class="row-fluid">
					<div class="span3">
					<div class="widget-box transparent">
						<div class="widget-header widget-header-small">
							<h4 class="blue smaller">
								<i class="icon-rss orange"></i>
									今日赛况
							</h4>

						<div class="widget-toolbar action-buttons">
							<a href="##" data-action="reload" class="hupuTodayRefresh">
								<i class="icon-refresh blue"></i>
							</a>
						</div>
					</div>
					<div id="todayContent">
					{% for today in hupuToday %}
					<div class="widget-body">
						<div class="widget-main padding-8">
							<div class="profile-feed">
								<div class="profile-activity clearfix">
									<div>
										<div class="row-fluid">
											<div class="span2">
											<div class="pull-right">
											<span class="{{ today.teamlogo1 }}"></span>
											</div>
											</div>
											<div class="span8">
											<center>
											<a class="user" href='{{ today.titleLink }}' target="_blank"> {{ today.title }} </a>
											</center>
											</div>
											<div class="span2">
											<div class="pull-left">
											<span class="{{ today.teamlogo2 }}"></span>
											</div>
											</div>
										</div>	
										<div class="time">
											<center>
											<i class="icon-time bigger-110"></i>
											<a href='{{ today.alertLink }}' target="_blank">
											{{ today.alert }}
											</a>
											</center>
										</div>
									</div>
								</div>

								
							</div>
						</div>
					</div>
					{% endfor %}
					</div>
					</div>
				</div>

				<div class="span4">
					<div class="widget-box transparent">
						<div class="widget-header widget-header-small">
							<h4 class="blue smaller">
								<i class="icon-comment blue"></i>
									湿乎乎的话题
							</h4>

							<div class="widget-toolbar action-buttons">
								<a href="##" data-action="reload" class="hupuTopicRefresh">
									<i class="icon-refresh blue"></i>
								</a>
							</div>
						</div>

						<div class="widget-body">
							<div class="widget-main padding-8">
								<div class="profile-feed hupu-scroll" id="topicContent">
									{% for topic in hupuTopic %}
									<div class="profile-activity clearfix">
										<div>
											<img class="pull-left" src="/static/ace/assets/avatars/avatar4.png" />
											<div class="red">
												<b>{{ topic.reply }}</b>
											</div>
											<div class="text"><a href="{{ topic.titleLink }}" target="_blank">{{ topic.title }}</a></div>
										</div>
									</div>
									{% endfor %}	
								</div>
							</div>
						</div>
						
					</div>


				</div><!--/span-->

				<div class="span5">

					<div class="widget-box transparent" id="recent-box">
						<div class="widget-header">
							<h4 class="lighter smaller">
								<i class="icon-bar-chart green"></i>
								数据
							</h4>

							<div class="widget-toolbar no-border">
								<ul class="nav nav-tabs">
									<li class="active">
										<a data-toggle="tab" href="#west-tab">西部</a>
									</li>

									<li>
										<a data-toggle="tab" href="#east-tab">东部</a>
									</li>

									<li>
										<a data-toggle="tab" href="#score-tab">得分</a>
									</li>
									<li>
										<a data-toggle="tab" href="#rebound-tab">篮板</a>
									</li>
									<li>
										<a data-toggle="tab" href="#assist-tab">助攻</a>
									</li>
								</ul>
							</div>


						</div>

						<div class="widget-body">
							<div class="widget-main padding-4">
								<div class="tab-content padding-8 overflow-visible hupu-scroll">
									<div id="west-tab" class="tab-pane active">
										<div class="clearfix">
											<table class="table table-striped table-bordered table-hover">
												<thead>
												<tr>
													<th>排名</th>
													<th>队名</th>
													<th>胜</th>
													<th>负</th>
													<th>近况</th>
													<th>胜场差</th>
												</tr>
												</thead>

												<tbody>
												{% for data in hupuData %}

												{% if data.dataType == '20' %}
												<tr>
													<td>{{ data.rank }}</td>
													<td>{{ data.teamName }}</td>
													<td>{{ data.win }}</td>
													<td>{{ data.lose }}</td>
													<td>{{ data.streak }}</td>
													<td>{{ data.difGames }}</td>
												</tr>
												{% endif %}

												{% endfor %}
												</tbody>
 												
 												</table>
										</div>				
									</div>

									<div id="east-tab" class="tab-pane ">
										<div class="clearfix">
											<table class="table table-striped table-bordered table-hover">
												<thead>
												<tr>
													<th>排名</th>
													<th>队名</th>
													<th>胜</th>
													<th>负</th>
													<th>近况</th>
													<th>胜场差</th>
												</tr>
												</thead>

												<tbody>
												{% for data in hupuData %}

												{% if data.dataType == '10' %}
												<tr>
													<td>{{ data.rank }}</td>
													<td>{{ data.teamName }}</td>
													<td>{{ data.win }}</td>
													<td>{{ data.lose }}</td>
													<td>{{ data.streak }}</td>
													<td>{{ data.difGames }}</td>
												</tr>
												{% endif %}

												{% endfor %}
												</tbody>
 												
 												</table>
										</div>

										<div class="hr hr-double hr8"></div>
									</div><!--member-tab-->

									<div id="score-tab" class="tab-pane ">
										<div class="clearfix">
											<table class="table table-striped table-bordered table-hover">
												<thead>
												<tr>
													<th>名次</th>
													<th>姓名</th>
													<th>球队</th>
													<th>得分</th>
												</tr>
												</thead>

												<tbody>
												{% for data in hupuData %}

												{% if data.dataType == '30' %}
												<tr>
													<td>{{ data.rank }}</td>
													<td>{{ data.name }}</td>
													<td>{{ data.teamName }}</td>
													<td>{{ data.win }}</td>
												</tr>
												{% endif %}

												{% endfor %}
												</tbody>
 												
 												</table>
										</div>

										<div class="hr hr-double hr8"></div>
									</div><!--member-tab-->

									<div id="rebound-tab" class="tab-pane ">
										<div class="clearfix">
											<table class="table table-striped table-bordered table-hover">
												<thead>
												<tr>
													<th>名次</th>
													<th>姓名</th>
													<th>球队</th>
													<th>篮板</th>
												</tr>
												</thead>

												<tbody>
												{% for data in hupuData %}

												{% if data.dataType == '40' %}
												<tr>
													<td>{{ data.rank }}</td>
													<td>{{ data.name }}</td>
													<td>{{ data.teamName }}</td>
													<td>{{ data.win }}</td>
												</tr>
												{% endif %}

												{% endfor %}
												</tbody>
 												
 												</table>
										</div>

										<div class="hr hr-double hr8"></div>
									</div><!--member-tab-->

									<div id="assist-tab" class="tab-pane ">
										<div class="clearfix">
											<table class="table table-striped table-bordered table-hover">
												<thead>
												<tr>
													<th>名次</th>
													<th>姓名</th>
													<th>球队</th>
													<th>助攻</th>
												</tr>
												</thead>

												<tbody>
												{% for data in hupuData %}

												{% if data.dataType == '50' %}
												<tr>
													<td>{{ data.rank }}</td>
													<td>{{ data.name }}</td>
													<td>{{ data.teamName }}</td>
													<td>{{ data.win }}</td>
												</tr>
												{% endif %}

												{% endfor %}
												</tbody>
 												
 												</table>
										</div>

										<div class="hr hr-double hr8"></div>
									</div><!--member-tab-->

								</div>
							</div><!--/widget-main-->
						</div><!--/widget-body-->
					</div><!--/widget-box-->
				</div>
			
			</div>
			<div class="hr hr-18 dotted hr-double"></div>

			<div class="row-fluid">
				<div class="span12">
					<div class="header blue">
						<h4>
							<img src="/static/web/img/hupuNBA/sina.ico" style="width:16px;height:16px;"/>
							&nbsp;
							<a href="http://nba.hupu.com" target="_blank" class="blue" style="border-style:solid ;border-width: 1px;">新浪NBA体育台</a>

							<label class="pull-right">
							<input name="sina-switch" class="ace-switch ace-switch-5 sina-switch" type="checkbox" />
							<span class="lbl"></span>
						</label>
						</h4>
					</div>
					

					<div class="row-fluid">

						<IFRAME style="WIDTH: 100%; HEIGHT: 350px" id="sina-tv" src="" 
							srcdoc='<br/><br/><br/><center><img src="/static/web/img/hupuNBA/NBA.jpg" /></center>'>

						</IFRAME>
						<div class="hr hr-18 dotted hr-double"></div>
					</div>
					
				</div>
			</div>
									
		</div>		
	</div><!--/row-->

{% endblock %}


{% block script %}
<!-- slim sroll -->
<script src="/static/ace/assets/js/jquery.slimscroll.min.js"></script>
<script src="/static/ace/assets/js/spin.min.js"></script>

<script src="/static/web/js/site/hupu.js"></script>

{% endblock %}